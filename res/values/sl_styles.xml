<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="TransparentDialog" parent="@android:style/Theme.Dialog">
		<item name="android:background">@color/sl_color_background</item>
	</style>

	<style name="sl_heading">
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/sl_color_foreground</item>
	</style>

	<style name="sl_title_bar">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/sl_color_background</item>
	</style>
	
	<style name="sl_normal">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/sl_color_foreground</item>
	</style>
	
	<style name="sl_list_item">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/sl_color_foreground</item>
	</style>
	
	<style name="sl_non_clickable">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/sl_color_foreground_lite</item>
	</style>
	
</resources>
